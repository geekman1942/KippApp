<!DOCTYPE html>
<html>
<head>
  <title>KippApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>

</head>
<body>

<%= yield %>
<div class="bottomMenu">
	<%= link_to("<div><i class='fa fa-home'></i> Home</div>".html_safe, controller:"homepage", action:"index") %>
	<a href="http://www.kippbayarea.org/"><div><i class="fa fa-globe"></i> Website</div></a>
	<%= link_to("<div><i class='fa fa-phone'></i> Contact</div>".html_safe, controller:"contact", action: "index")%>
</div>
 <p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>
</html>
